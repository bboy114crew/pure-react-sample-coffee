.flip-wizard {
  height 100%;
  padding-bottom 40px;
  position relative;

  & > .step-panel {
    height 100%;
    //overflow-y auto;
  }

  & > .controls {
    position: absolute;
    bottom: 0;
    left: 0;
    width 100%;
    height 40px;
    line-height 40px;
  }

  & > .controls > .btn-next {
    display block;
    position relative;
    background-color: #ff792c;
    color: #fff;
    text-align: center;

    text-transform uppercase;

    & > .fa-angle-right {
      position: absolute;
      top: 12px;
      right: 10px;
    }
  }
}