.flip-panel {
  overflow hidden;
  position relative;

  .flip-card {
    position absolute;
    height 100%;
    width 100%;
    left 0;

    &.slide-up-enter {
      top 100%;
    }
    &.slide-up-enter.slide-up-enter-active {
      top 0;
      transition: top 300ms ease;
    }
    &.slide-up-leave {
      z-index -1;
      top 0;
    }
    &.slide-up-leave.slide-up-leave-active {
      top -30px;
      transition: top 300ms ease;
    }

    &.slide-down-enter {
      top -30px;
    }
    &.slide-down-enter.slide-down-enter-active {
      top 0;
      transition: top 300ms ease;
    }
    &.slide-down-leave {
      top 0;
    }
    &.slide-down-leave.slide-down-leave-active {
      top 100%;
      transition: top 300ms ease;
    }

  }
}