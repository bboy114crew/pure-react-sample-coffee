.intro-step {
  height 100%;
  background: url(/assets/img/menu.gif) center no-repeat;
  background-size: cover;

  padding-top 46px;
  position relative;

  .install-app {
    position: absolute;
    top: 0;
    left: 0;
    width 100%;
    height 46px;

    background-color: #555;
    color white;

    padding 11px 0 0 55px;
    font-size: 16px;

    img {
      position: absolute;
      top: 11px;
      left: 13px;
      width 30px;
      height 30px;
    }

    .btn-install {
      position: absolute;
      top: 7px;
      right: 9px;
      text-transform uppercase;

      background-color: #ff792c;
      color: #fff;
      border-radius: 4px;
      padding 6px 12px;
      font-size 14px;
    }
  }
}