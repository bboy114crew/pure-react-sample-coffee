.customer-info-step {
  height 100%;
  background: url(/assets/img/main-left.gif) center no-repeat;
  background-size: cover;

  .header {
    padding-top 26px;
    text-align center;
    img {
      width 195px;
    }

    .text {
      margin-top 20px;

      text-transform: uppercase;
      font-size: 15px;
      margin-bottom: 0;
      font-weight: 700;
      color: #777;

      .small {
        font-size: 10px;
        font-weight: 400;
        padding-left: 6px;
      }
    }
  }

  .form {
    max-width 260px;
    margin 10px auto 0;
    .form-group {
      margin-bottom: 15px;

      .form-control {
        width 100%;
        height 34px;
        line-height 32px;

        background-color: #fff;
        color: #555;
        box-shadow: 1px 1px 1px 0 #ddd;
        border: 1px solid #ccc;

        padding: 6px 12px;
        font-size: 14px;
        border-radius: 4px;

        placeholder-color(#a9a9a9);
      }
    }

    .delivery-time-radio {

      img {
        width: 20px;
        margin-right: 6px;
        border: 1px solid #ccc;
        border-radius: 50%;
      }
    }
  }
}