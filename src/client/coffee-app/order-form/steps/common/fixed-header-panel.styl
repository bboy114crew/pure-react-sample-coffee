.fixed-header-panel {
  position relative;
  height 100%;
  padding-top 61px;

  & > .header {
    position: absolute;
    top: 0;
    left: 0;
    width 100%;
    height 61px;
    line-height 61px;

    text-align center;

    color: #777;

    .title {
      text-transform uppercase;
      font-size 15px;
      font-weight 600;
    }

    .small {
      font-size 10px;
      padding-left 8px;
    }

    .fa-angle-left {
      position: absolute;
      top: 19px;
      left: 16px;
      font-size: 22px;
    }
  }

  & > .content {
    height 100%;
    position relative;
  }
}