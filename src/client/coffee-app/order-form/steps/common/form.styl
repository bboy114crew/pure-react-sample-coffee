.form-group {
  margin-bottom: 15px;

  .form-control {
    width 100%;
    height 34px;
    line-height 32px;

    background-color: #fff;
    color: #555;
    box-shadow: 1px 1px 1px 0 #ddd;
    border: 1px solid #ccc;

    padding: 6px 12px;
    font-size: 13px;
    border-radius: 4px;

    placeholder-color(#a9a9a9);
  }
}